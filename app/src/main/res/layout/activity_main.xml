<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/amountTextView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A237E"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="329dp"
        android:layout_height="396dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="276dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/amountTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="Amount $ : "
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="#00BCD4"
                android:textSize="26sp"
                android:textStyle="bold|italic"
                tools:ignore="DuplicateIds,HardcodedText" />

            <EditText
                android:id="@+id/billEditText"
                android:backgroundTint="#FF5722"
                android:hint="@string/type_here"
                android:inputType="number|numberDecimal"
                android:textColor="#00BCD4"
                android:textColorHighlight="#00BCD4"
                android:textColorHint="#00BCD4"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <TextView
                android:id="@+id/customTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="Custom % : "
                android:textAlignment="textEnd"
                android:textColor="#00BCD4"
                android:textSize="26sp"
                android:textStyle="bold|italic" />

            <SeekBar
                android:id="@+id/tipSlider"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00BCD4"
                android:foregroundTint="#00BCD4"
                android:indeterminateTint="#00BCD4"
                android:outlineAmbientShadowColor="#4DD0E1"
                android:outlineSpotShadowColor="#4DD0E1"
                android:progressBackgroundTint="#4DD0E1"
                android:progressTint="#26C6DA"
                android:secondaryProgressTint="#FF5722"
                android:thumbTint="#FF5722" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="128dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="169dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:text="Tip %"
                    android:textColor="#FF5722"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:text="1 %"
                    android:textColor="#FF5722"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:text="25 %"
                    android:textColor="#FF5722"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/customTip"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text="1 %"
                    android:textColor="#FF5722"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView
                    android:id="@+id/tipText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tip $"
                    android:textColor="#FF7043"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tip1Val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF7043"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tip10Val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF7043"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tipSeekVal"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF7043"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:id="@+id/totalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total $"
                    android:textColor="#FFB74D"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total1Val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFB74D"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total10Val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFB74D"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalSeekVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFB74D"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>